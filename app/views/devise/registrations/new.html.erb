<div class='registration-page'>
 <%= render 'shared/header'%>
  <div class='registration-form'>
    <%= form_with model: @user, url: user_registration_path, method: :post, class: 'registration-form-area', local: true do |f| %>
        <div class='registration-form-header'>
          <b class='registration-form-text'>会員情報入力</b>
        </div>
        <div class='registration-form-wrap'>
          <label class='registration-text'>nickname</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.text_area :nickname, class:"input-default-registration", id:"nickname", placeholder:"例) higashi太郎", maxlength:"15" %>
        <div class='registration-form-wrap'>
          <label class='registration-text'>mail address</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.email_field :email, class:"input-default-registration", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        <div class='registration-form-wrap'>
          <label class='registration-text'>password</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password, class:"input-default-registration", id:"password", placeholder:"6文字以上の半角英数字" %>
        <div class='registration-form-wrap'>
          <label class='registration-text'>password(確認)</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default-registration", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        <div class='registration-btn'>
        <%= f.submit "登録", class: "registration-submit"%>
        </div>
    <% end %>
  </div>
 <%= render 'shared/footer'%>
</div>